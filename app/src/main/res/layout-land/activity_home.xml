<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/HomeTheme">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/titre"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_kanto"
        android:layout_alignStart="@+id/btn_kanto"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginTop="33dp"
        android:paddingTop="20dp"
        android:text="@string/pokedex"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btn_kanto"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titre"
        android:layout_centerHorizontal="true"
        android:onClick="goToKanto"
        android:paddingBottom="5dp"
        android:text="@string/kanto"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btn_johto"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_kanto"
        android:layout_centerHorizontal="true"
        android:onClick="goToJohto"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/johto"
        android:textSize="30dp" />

</RelativeLayout>